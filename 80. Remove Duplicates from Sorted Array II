class Solution {
    public int removeDuplicates(int[] nums) {
        int c = 0;
        int t = 0;
        
        for(int i = 0 ; i < nums.length-1 ; i++) {
            if(nums[i] == nums[i+1]) {
                t++;
                if(t >= 2) {
                    int n = nums[i+1];
                    nums[i+1] = 99999;
                    if(i+2 != nums.length) i += 2;
                    else break;
                    if(nums[i] != n) i--;
                    while(nums[i] == n) {
                        nums[i] = 99999;
                        i++;
                        if(i == nums.length) break;
                    }
                    i--;
                    t = 0;
                }
            } else {
                t = 0;
            }
        }
        int j = 0;
        boolean con = false;;
        for(int i = 0 ; i < nums.length ; i++) {
            if(nums[i] != 99999) {
                nums[j] = nums[i];
                if(con) {
                    nums[i] = 99999;    
                }
                j++;
            } else {
                con = true;
            }
        }
        for(int i = 0 ; i < nums.length ; i++) {
            if(nums[i] == 99999) break;
            c++;
        }
        return c;
    }
}
