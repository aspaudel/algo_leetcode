class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
        for(int i = 0 ; i < gas.length ; i++) {
            if(gas[i] < cost[i]) continue;
            int tgas = gas[i];
            int index = i;
            while(tgas > 0) {
                if(index < gas.length-1) {
                    if(tgas < cost[index]) break;
                    tgas = tgas - cost[index] + gas[index+1];
                    index++;    
                } else {
                    if(tgas < cost[index]) break;
                    tgas = tgas - cost[index] + gas[0];
                    index = 0;
                } 
                if(index == i) return i;
            }
            if(index > i) i = index;
        }
        return -1;
    }
}
