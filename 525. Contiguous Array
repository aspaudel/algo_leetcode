class Solution {
    public int findMaxLength(int[] nums) {
        int max = 0;
        int sum = 0;
        HashMap<Integer, Integer> map = new HashMap<>();
        for(int i = 0 ; i < nums.length ; i++) {
            if(nums[i] == 0) sum--;
            else sum++;
            if(!map.containsKey(sum)) {
                map.put(sum, i);
            } 
            if(sum == 0) max = Math.max(max, i+1);
            if(map.containsKey(sum)) {
                max = Math.max(max, i - map.get(sum));
            }
        }
        return max;
    }
}
