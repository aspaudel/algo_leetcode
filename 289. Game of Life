class Solution {
    public void gameOfLife(int[][] board) {
        int[][] res = new int[board.length][board[0].length];
        for(int  i = 0 ; i < board.length ; i++) {
            for(int j = 0 ; j < board[i].length ; j++) {
                int oneCount = 0;
                if(i-1 >= 0  && j-1 >= 0) {
                    if(board[i-1][j-1] == 1) {
                        oneCount++;
                    }
                }
                if(i-1 >= 0) {
                    if(board[i-1][j] == 1) {
                        oneCount++;
                    }
                }
                if(i-1 >= 0 && j+1 < board[i].length) {
                    if(board[i-1][j+1] == 1) {
                        oneCount++;
                    }
                }
                if(j-1 >= 0) {
                    if(board[i][j-1] == 1) {
                        oneCount++;
                    }
                }
                if(j+1 < board[i].length) {
                    if(board[i][j+1] == 1) {
                        oneCount++;
                    }
                }
                if(i+1 < board.length) {
                    if(board[i+1][j] == 1) {
                        oneCount++;
                    }
                }
                if(i+1 < board.length && j-1 >= 0) {
                    if(board[i+1][j-1] == 1) {
                        oneCount++;
                    }
                }
                if(i+1 < board.length && j+1 < board[i].length) {
                    if(board[i+1][j+1] == 1) {
                        oneCount++;
                    }
                }
                if(board[i][j] == 0 && oneCount == 3) {
                    res[i][j] = 1;
                }
                if(board[i][j] == 1 && (oneCount == 2 || oneCount == 3)) {
                    System.out.println(i+" "+j+" "+board[i][j]+" "+oneCount);
                    res[i][j] = 1;
                }
            }
        }
        for(int i = 0 ; i < res.length ; i++) {
            for(int j = 0 ; j < res[i].length ; j++) {
                board[i][j] = res[i][j];
            }
        }
    }
}
