class Solution {
    public String convert(String s, int numRows) {
        char[][] arr = new char[numRows][s.length()];
        int c = 0;
        int j = 0;
        while(c != s.length()) {
            int i = 0;
            while(i != numRows) {
                if(c == s.length()) break;
                arr[i][j] = s.charAt(c);
                i++;
                c++;
            }
            i--;
            while(i >= 2) {
                if(c == s.length()) break;
                i--;
                j++;
                arr[i][j] = s.charAt(c);
                c++;
            }
            j++;
        }
        String res = "";
        for(int i = 0 ; i < numRows ; i++) {
            for(j = 0 ; j < s.length() ; j++) {
                if(arr[i][j] != '\0') {
                    res += arr[i][j];
                }
            }
        }
        return res;
    }
}
