class Solution {
    public String intToRoman(int num) {
        String res = "";
        while(num > 0) {
            int q = 0;
            String c = "";
            if(num >= 900 && num < 1000) {
                res += "CM";
                num = num % 100;
                continue;
            }
            if(num >= 400 && num < 500) {
                res += "CD";
                num = num % 100;
                continue;
            }
            if(num >= 90 && num < 100) {
                res += "XC";
                num = num % 10;
                continue;
            }
            if(num >= 40 && num < 50) {
                res += "XL";
                num = num % 10;
                continue;
            }
            if(num == 9) {
                res += "IX";
                break;
            }
            if(num == 4) {
                res += "IV";
                break;
            }
            if(num >= 1000) {
                q = num / 1000;    
                c = "M";
                num = num % 1000;
            } else if(num >= 500) {
                q = num / 500;
                c = "D";
                num = num % 500;
            } else if(num >= 100) {
                q = num / 100;
                c = "C";
                num = num % 100;
            } else if(num >= 50) {
                q = num / 50;
                c = "L";
                num = num % 50;
            } else if(num >= 10) {
                q = num / 10;
                c = "X";
                num = num % 10;
            } else if(num >= 5) {
                q = num / 5;
                c = "V";
                num = num % 5;
            } else if(num >= 1) {
                q = num / 1;
                c = "I";
                num = num % 1;
                for(int i = 0 ; i < q ; i++) {
                    res += c;
                }
                break;
            }
            for(int i = 0 ; i < q ; i++) {
                res += c;
            }
        }
        return res;
    }
}
