class Solution {
    List<List<Integer>> allCombinations(int[] candidates, int index,int target, List<Integer> tempList) {
        List<List<Integer>> ret = new ArrayList<>(); 
        if(target == 0) {
            ret.add(new ArrayList<>(tempList));
            return ret;
        }
        for(int i = index ; i < candidates.length ; i++) {
            if(target - candidates[i] >= 0) {
                tempList.add(candidates[i]);
                List<List<Integer>> arr = allCombinations(candidates, i, target-candidates[i], tempList);
                if(!arr.isEmpty()) {
                    ret.addAll(arr);
                }
                tempList.remove(tempList.size()-1);
            }
        }
        return ret;
    }
    public List<List<Integer>> combinationSum(int[] candidates, int target) {
        return allCombinations(candidates, 0, target, new ArrayList<>());
    }
}
